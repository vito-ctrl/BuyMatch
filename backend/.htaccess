# Enable Rewrite Engine
RewriteEngine On

# Base path (adjust if needed)
RewriteBase /BUYMATCH/backend/

# Prevent directory listing
Options -Indexes

# Block access to sensitive files
<FilesMatch "\.(env|ini|log|sql|json|yml)$">
    Require all denied
</FilesMatch>

# Block access to core folders
RewriteRule ^(app|config|vendor)/ - [F,L]

# Allow existing files & directories
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Redirect everything else to index.php (Front Controller)
RewriteRule ^ index.php [QSA,L]
